---
import { getGlobals } from '../lib/directus';
const globalsResponse = await getGlobals();
const globals = globalsResponse[0] || { site_title: "MMS PPG Committee", site_description: "Patient Participation Group" };

// Get current page for active nav state
const currentPath = Astro.url.pathname;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{globals.site_title}</title>
    <meta name="description" content={globals.site_description} />
  </head>
  <body class="bg-[#EDF0ED] text-[#596175] font-sans min-h-screen flex flex-col antialiased">
    <!-- Animated background gradient -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <div class="absolute top-0 left-1/4 w-96 h-96 bg-[#5B9085]/5 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-[#529F44]/5 rounded-full blur-3xl animate-float-delayed"></div>
    </div>

    <!-- HEADER -->
    <header class="sticky top-0 z-50 backdrop-blur-md bg-white/80 border-b border-[#5B9085]/20 shadow-sm">
      <div class="max-w-7xl mx-auto px-4 md:px-6">
        <div class="flex items-center justify-between py-4">
          <!-- Logo/Brand -->
          <a href="/" class="group flex items-center gap-3 transition-all">
            <div class="relative">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-[#5B9085] to-[#529F44] flex items-center justify-center shadow-lg group-hover:shadow-xl transition-shadow">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
              </div>
              <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-[#529F44] rounded-full border-2 border-white"></div>
            </div>
            <div class="hidden sm:block">
              <h1 class="text-xl font-bold text-[#596175] group-hover:text-[#5B9085] transition-colors">{globals.site_title}</h1>
              {globals.site_description && (
                <p class="text-xs text-[#305A65]/70">{globals.site_description}</p>
              )}
            </div>
          </a>

          <!-- Desktop Navigation -->
          <nav class="hidden md:flex items-center gap-2">
            <a 
              href="/" 
              class={`nav-link ${currentPath === '/' ? 'nav-link-active' : ''}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              Home
            </a>
            <a 
              href="/members" 
              class={`nav-link ${currentPath === '/members' ? 'nav-link-active' : ''}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
              Members
            </a>
            <a 
              href="/events" 
              class={`nav-link ${currentPath === '/events' ? 'nav-link-active' : ''}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              Events
            </a>
            <a 
              href="/agendas" 
              class={`nav-link ${currentPath === '/agendas' ? 'nav-link-active' : ''}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Agendas
            </a>
            <a 
              href="/contacts" 
              class={`nav-link ${currentPath === '/contacts' ? 'nav-link-active' : ''}`}
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              Contacts
            </a>
            
            <!-- Logout Button -->
            <a 
              href="/api/logout" 
              class="nav-link !text-red-600 hover:!text-red-700 hover:!bg-red-50"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              Logout
            </a>
          </nav>

          <!-- Mobile Menu Button -->
          <button 
            id="mobile-menu-button" 
            class="md:hidden p-2 rounded-lg hover:bg-[#5B9085]/10 transition-colors"
            aria-label="Toggle menu"
          >
            <svg class="w-6 h-6 text-[#596175]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation -->
      <div id="mobile-menu" class="hidden md:hidden border-t border-[#5B9085]/20 bg-white/95 backdrop-blur-md">
        <nav class="max-w-7xl mx-auto px-4 py-4 space-y-2">
          <a 
            href="/" 
            class={`mobile-nav-link ${currentPath === '/' ? 'mobile-nav-link-active' : ''}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Home
          </a>
          <a 
            href="/members" 
            class={`mobile-nav-link ${currentPath === '/members' ? 'mobile-nav-link-active' : ''}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
            Members
          </a>
          <a 
            href="/events" 
            class={`mobile-nav-link ${currentPath === '/events' ? 'mobile-nav-link-active' : ''}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Events
          </a>
          <a 
            href="/agendas" 
            class={`mobile-nav-link ${currentPath === '/agendas' ? 'mobile-nav-link-active' : ''}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Agendas
          </a>
          <a 
            href="/contacts" 
            class={`mobile-nav-link ${currentPath === '/contacts' ? 'mobile-nav-link-active' : ''}`}
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Contacts
          </a>
        </nav>
      </div>
    </header>

    <!-- PAGE CONTENT -->
    <main class="flex-1 max-w-7xl mx-auto w-full px-4 md:px-6 py-8 md:py-12">
      <slot />
    </main>

    <!-- FOOTER -->
    <footer class="relative mt-20 bg-gradient-to-br from-[#596175] to-[#305A65] text-white">
      <!-- Decorative wave -->
      <div class="absolute top-0 left-0 right-0 -mt-1">
        <svg class="w-full h-8 md:h-12 text-[#596175]" preserveAspectRatio="none" viewBox="0 0 1200 120" fill="currentColor">
          <path d="M321.39,56.44c58-10.79,114.16-30.13,172-41.86,82.39-16.72,168.19-17.73,250.45-.39C823.78,31,906.67,72,985.66,92.83c70.05,18.48,146.53,26.09,214.34,3V0H0V27.35A600.21,600.21,0,0,0,321.39,56.44Z" opacity=".3"></path>
        </svg>
      </div>
      
      <div class="max-w-7xl mx-auto px-4 md:px-6 pt-16 pb-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
          <!-- About -->
          <div>
            <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
              <div class="w-8 h-8 rounded-lg bg-white/10 flex items-center justify-center">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              {globals.site_title}
            </h3>
            {globals.site_description && (
              <p class="text-white/80 text-sm leading-relaxed">{globals.site_description}</p>
            )}
          </div>

          <!-- Quick Links -->
          <div>
            <h3 class="text-lg font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="/" class="text-white/80 hover:text-white hover:translate-x-1 inline-block transition-all">Home</a></li>
              <li><a href="/events" class="text-white/80 hover:text-white hover:translate-x-1 inline-block transition-all">Events</a></li>
              <li><a href="/agendas" class="text-white/80 hover:text-white hover:translate-x-1 inline-block transition-all">Agendas</a></li>
              <li><a href="/contacts" class="text-white/80 hover:text-white hover:translate-x-1 inline-block transition-all">Contacts</a></li>
            </ul>
          </div>

          <!-- Committee Info -->
          <div>
            <h3 class="text-lg font-bold mb-4">Committee</h3>
            <div class="space-y-3 text-sm text-white/80">
              <p class="leading-relaxed">Internal committee management system for tracking meetings, agendas, and member information.</p>
            </div>
          </div>
        </div>

        <!-- Bottom bar -->
        <div class="pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-white/60">
          <p>&copy; {new Date().getFullYear()} {globals.site_title}. All rights reserved.</p>
          <div class="flex items-center gap-4">
            <span>Made with care for our community</span>
          </div>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });

      // Close mobile menu when clicking outside
      document.addEventListener('click', (e) => {
        if (!mobileMenuButton?.contains(e.target as Node) && !mobileMenu?.contains(e.target as Node)) {
          mobileMenu?.classList.add('hidden');
        }
      });
    </script>

    <style>
      /* Navigation styles */
      .nav-link {
        @apply px-4 py-2 rounded-lg font-medium text-[#596175] hover:text-[#5B9085] hover:bg-[#5B9085]/10 transition-all flex items-center gap-2;
      }
      
      .nav-link-active {
        @apply bg-gradient-to-r from-[#5B9085] to-[#529F44] text-white shadow-md;
      }

      .mobile-nav-link {
        @apply flex items-center gap-3 px-4 py-3 rounded-lg font-medium text-[#596175] hover:text-[#5B9085] hover:bg-[#5B9085]/10 transition-all;
      }

      .mobile-nav-link-active {
        @apply bg-gradient-to-r from-[#5B9085] to-[#529F44] text-white shadow-md;
      }

      /* Animations */
      @keyframes float {
        0%, 100% { transform: translate(0, 0) scale(1); }
        33% { transform: translate(30px, -30px) scale(1.1); }
        66% { transform: translate(-20px, 20px) scale(0.9); }
      }

      @keyframes float-delayed {
        0%, 100% { transform: translate(0, 0) scale(1); }
        33% { transform: translate(-30px, 30px) scale(0.9); }
        66% { transform: translate(20px, -20px) scale(1.1); }
      }

      .animate-float {
        animation: float 20s ease-in-out infinite;
      }

      .animate-float-delayed {
        animation: float-delayed 25s ease-in-out infinite;
      }
    </style>
  </body>
</html>