---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getContacts } from '../lib/directus';
const contacts = await getContacts();
---
<BaseLayout>
  <div class="relative">
    <!-- Header with gradient background -->
    <div class="relative mb-12 pb-8 border-b-2 border-[#5B9085]/20">
      <div class="absolute inset-0 bg-gradient-to-r from-[#5B9085]/5 to-[#529F44]/5 rounded-2xl -z-10"></div>
      <h2 class="text-5xl font-bold text-[#596175] mb-3 tracking-tight">Committee Contacts</h2>
      <p class="text-lg text-[#305A65]/70">Connect with our dedicated team members</p>
    </div>

    {contacts.length === 0 ? (
      <div class="flex flex-col items-center justify-center py-20 px-4">
        <div class="w-20 h-20 bg-[#5B9085]/10 rounded-full flex items-center justify-center mb-6">
          <svg class="w-10 h-10 text-[#5B9085]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </div>
        <p class="text-xl text-[#305A65] font-medium">No contacts available at this time.</p>
      </div>
    ) : (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {contacts.map((contact, index) => {
          const orgName = contact.organisation_id?.organisation_name || 'Independent';
          return (
            <div 
              key={contact.id} 
              class="group relative bg-white rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-[#5B9085]/10 hover:border-[#5B9085]/30 hover:-translate-y-1"
              style={`animation: fadeInUp 0.6s ease-out ${index * 0.1}s both;`}
            >
              <!-- Decorative corner accent -->
              <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-[#5B9085]/10 to-transparent rounded-bl-full rounded-tr-2xl"></div>
              
              <!-- Avatar circle with initials -->
              <div class="relative mb-6">
                <div class="w-16 h-16 rounded-full bg-gradient-to-br from-[#5B9085] to-[#529F44] flex items-center justify-center text-white text-xl font-bold shadow-lg group-hover:scale-110 transition-transform duration-300">
                  {contact.first_name[0]}{contact.last_name[0]}
                </div>
                <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-[#529F44] rounded-full border-2 border-white"></div>
              </div>

              <!-- Content -->
              <div class="relative z-10">
                <h3 class="text-2xl font-bold text-[#596175] mb-2 group-hover:text-[#5B9085] transition-colors">
                  {contact.first_name} {contact.last_name}
                </h3>
                
                <div class="inline-block px-3 py-1 bg-[#5B9085]/10 rounded-full mb-4">
                  <p class="text-sm font-semibold text-[#5B9085]">{contact.role}</p>
                </div>

                <div class="space-y-3 mb-4">
                  <div class="flex items-center gap-3 text-[#305A65]">
                    <svg class="w-5 h-5 text-[#5B9085] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <a href={`mailto:${contact.email_address}`} class="hover:text-[#5B9085] transition-colors text-sm break-all">
                      {contact.email_address}
                    </a>
                  </div>
                </div>

                <div class="pt-4 border-t border-[#596175]/10">
                  <div class="flex items-center gap-2">
                    <svg class="w-4 h-4 text-[#529F44]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    <p class="text-sm font-medium text-[#529F44]">{orgName}</p>
                  </div>
                </div>
              </div>
            </div>
          )
        })}
      </div>
    )}
  </div>
</BaseLayout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>