cat > src/pages/debug-docs.astro << 'EOF'
---
import { directus } from '../lib/directus';
import { readItems } from '@directus/sdk';

let allDocs = [];
let error = null;

try {
  allDocs = await directus.request(
    readItems('documentation', {
      fields: ['*']
    })
  );
} catch (e) {
  error = e.message;
}
---

<html>
<head>
  <title>Debug Documentation</title>
</head>
<body style="font-family: monospace; padding: 20px;">
  <h1>Debug: Documentation Collection</h1>
  
  {error ? (
    <div style="background: #fee; padding: 20px; border: 1px solid red;">
      <strong>Error:</strong> {error}
    </div>
  ) : (
    <div>
      <p><strong>Total documents found:</strong> {allDocs.length}</p>
      
      <pre style="background: #f5f5f5; padding: 20px; overflow: auto;">
        {JSON.stringify(allDocs, null, 2)}
      </pre>
    </div>
  )}
  
  <hr/>
  <a href="/reports">‚Üê Back to Reports</a>
</body>
</html>
EOF