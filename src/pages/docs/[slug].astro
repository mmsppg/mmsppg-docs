---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getDocumentationBySlug } from '../../lib/directus';

const { slug } = Astro.params;

let doc = null;
let error = null;

try {
  doc = await getDocumentationBySlug(slug);
} catch (e) {
  error = e.message;
  console.error("Error loading document:", e);
}

if (!doc && !error) {
  return Astro.redirect('/docs');
}

function formatDate(dateString: string) {
  try {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-GB', { 
      day: 'numeric', 
      month: 'long', 
      year: 'numeric' 
    });
  } catch {
    return dateString;
  }
}
---

<BaseLayout>
  {error ? (
    <div class="max-w-4xl mx-auto">
      <div class="p-8 bg-red-50 border border-red-200 rounded-lg text-red-600">
        Error loading document: {error}
      </div>
      <a href="/docs" class="inline-flex items-center gap-2 mt-6 text-[#5B9085] hover:text-[#529F44] transition-colors">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Documentation
      </a>
    </div>
  ) : doc && (
    <div class="max-w-4xl mx-auto">
      <!-- Back button -->
      <a 
        href="/docs" 
        class="inline-flex items-center gap-2 mb-8 text-[#5B9085] hover:text-[#529F44] transition-colors font-medium"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        Back to Documentation
      </a>

      <!-- Document content -->
      <article class="bg-white rounded-2xl shadow-lg border border-[#5B9085]/20 overflow-hidden">
        <!-- Header -->
        <div class="bg-gradient-to-br from-[#5B9085] to-[#529F44] p-8 md:p-12 text-white">
          {doc.category && (
            <div class="inline-block px-3 py-1 bg-white/20 backdrop-blur-sm rounded-full text-sm font-semibold mb-4">
              {doc.category}
            </div>
          )}
          
          <h1 class="text-3xl md:text-5xl font-bold mb-4">
            {doc.title}
          </h1>

          <div class="flex flex-wrap items-center gap-4 text-white/90">
            {doc.date && (
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formatDate(doc.date)}</span>
              </div>
            )}

            {doc.author && (
              <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center text-sm font-bold">
                  {doc.author.firstname?.[0] || 'A'}{doc.author.lastname?.[0] || ''}
                </div>
                <span>
                  {doc.author.firstname} {doc.author.lastname}
                </span>
              </div>
            )}
          </div>
        </div>

        <!-- Content -->
        <div class="p-8 md:p-12">
          <div class="prose prose-lg max-w-none
            prose-headings:text-[#596175] 
            prose-p:text-[#305A65] 
            prose-a:text-[#5B9085] 
            prose-strong:text-[#596175]
            prose-ul:text-[#305A65]
            prose-ol:text-[#305A65]
            prose-li:text-[#305A65]
            prose-blockquote:border-l-[#5B9085]
            prose-blockquote:text-[#305A65]
          ">
            <Fragment set:html={doc.content} />
          </div>
        </div>

        <!-- Footer -->
        <div class="border-t border-[#596175]/10 p-8 bg-[#EDF0ED]/50">
          <div class="flex flex-wrap items-center justify-between gap-4">
            {doc.last_updated && (
              <div class="text-sm text-[#305A65]">
                Last updated: {formatDate(doc.last_updated)}
              </div>
            )}
            <a 
              href="/docs" 
              class="px-4 py-2 bg-[#5B9085] text-white rounded-lg hover:bg-[#529F44] transition-colors font-medium"
            >
              Back to All Documentation
            </a>
          </div>
        </div>
      </article>
    </div>
  )}
</BaseLayout>